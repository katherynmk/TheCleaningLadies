<section class="form">
	<div class="main">  	
		<input type="checkbox" id="chk" aria-hidden="true">

			<div class="signup">
				<form method="post">
					<label for="chk" aria-hidden="true">Sign up</label>
					<input class= "logininput"type="text" name="username" placeholder="User Name" required>
					<input class= "logininput" type="password" name="password" placeholder="Password" required>
					<button class="signupbutton">Sign up</button>
				</form>
			</div>

			<div class="login">
				<form method="post">
					<label for="chk" aria-hidden="true">Login</label>
					<input class= "logininput" type="text" name="username" placeholder="User Name" required>
					<input class= "logininput" type="password" name="password" placeholder="Password" required>
					<button type ="submit" class="signupbutton">Login</button>
				</form>
			</div>
	</div>
</section>

